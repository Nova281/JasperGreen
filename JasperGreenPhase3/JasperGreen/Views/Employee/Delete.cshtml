@model Employee
@{
    ViewBag.Title = "Delete Employee";
}

<div class="alert-danger mt-4 p-4">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete '@Model.FullName'?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EmployeeID" />
        <input type="hidden" asp-for="EmployeeFirstName" />
        <input type="hidden" asp-for="EmployeeLastName" />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>