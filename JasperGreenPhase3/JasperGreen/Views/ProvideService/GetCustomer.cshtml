@model Customer
@{
    ViewBag.Title = "Select Customer";
}

<h1>Select Customer</h1>

<form asp-action="Customer" method="post">
    <select asp-for="CustomerID" class="form-select"
            asp-items="@(new SelectList(ViewBag.Customers, "CustomerID", "FullName"))">
        <option value="0">Select a customer...</option>
    </select>
    <button type="submit" class="btn btn-primary mt-2">Select</button>
</form>