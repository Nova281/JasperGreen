@model ProvideServiceListViewModel
@{
    ViewBag.Title = "Service Manager";
}

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col">
        <a asp-controller="ProvideService" asp-action="GetCustomer" class="btn btn-primary mr-2">By Customer</a>
        <a asp-controller="ProvideService" asp-action="GetProperty" class="btn btn-primary">By Property</a>
        <a asp-controller="ProvideService" asp-action="GetCrew" class="btn btn-primary">By Crew</a>
    </div>
</div>
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Property</th>
            <th>Crew</th>
            <th>Service Date</th>
            <th>Service Fee</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.ProvideServices)
        {
            <tr>
                <td>@service.Customer.FullName</td>
                <td>@service.Property.PropertyAddress</td>
                <td>@service.Crew.CrewName</td>
                <td>@service.ServiceDate</td>
                <td>@service.ServiceFee</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@service.ServiceID"
                       class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id="@service.ServiceID"
                       class="btn btn-primary">Delete</a>
                </td>
                <td>
                    <a asp-controller="ProvideService" asp-action="Pay"
                       asp-route-id="@service.ServiceID"
                       class="btn btn-primary">Pay</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary mb-3">Add Service</a>