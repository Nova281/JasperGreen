@model ProvideServiceViewModel
@{
    ViewBag.Title = Model.Action + " Service";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">

    <div class="row mb-3">
        <label asp-for="Service.CustomerID" class="col-form-label col-md-2">Customer</label>
        <div class="col">
            <select asp-for="Service.CustomerID" class="form-select"
                    asp-items="@(new SelectList(Model.Customers,
                         "CustomerID", "FullName"))">
                <option value="">Select a Customer...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Service.CustomerID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Service.PropertyID" class="col-form-label col-md-2">Property</label>
        <div class="col">
            <select asp-for="Service.PropertyID" class="form-select"
                    asp-items="@(new SelectList(Model.Properties,
                         "PropertyID", "PropertyAddress"))">
                <option value="">Select a Property...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Service.PropertyID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Service.CrewID" class="col-form-label col-md-2">Crew</label>
        <div class="col">
            <select asp-for="Service.CrewID" class="form-select"
                    asp-items="@(new SelectList(Model.Crews,
                         "CrewID", "CrewName"))">
                <option value="">Select a Crew...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Service.CrewID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Service.ServiceDate" class="col-form-label col-md-2">Service Date</label>
        <div class="col">
            <input asp-for="Service.ServiceDate" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Service.ServiceDate" class="text-danger"></span>
        </div>
    </div><div class="row mb-3">
        <label asp-for="Service.ServiceFee" class="col-form-label col-md-2">Service Fee</label>
        <div class="col">
            <input asp-for="Service.ServiceFee" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Service.ServiceFee" class="text-danger"></span>
        </div>
    </div>
