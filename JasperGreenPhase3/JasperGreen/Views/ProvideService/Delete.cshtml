@model ProvideService
@{
    ViewBag.Title = "Delete Service";
}

<div class="alert-danger mt-4 p-4">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete Service for @Model.Customer.FullName?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ServiceID" />
        <input type="hidden" asp-for="Customer.FullName" />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>