@model PaymentViewModel
@{
    string title = ViewBag.Action + " Payment";
    ViewData["Title"] = title;
}

<h2 class="mt-3 mb-3">@ViewBag.Title</h2>
<link rel="stylesheet" href="site.css" />

<form asp-controller="Payment" asp-action="Save" method="post">

    <div class="row mb-3">
        <label asp-for="Payment.CustomerID" class="col-form-label col-md-2">Customer</label>
        <div class="col">
            <select asp-for="Payment.CustomerID" class="form-select"
                    asp-items="@(new SelectList(Model.Customers,
                         "CustomerID", "FullName", Model.Payment.CustomerID))">
                <option value="">Select a customer...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Payment.CustomerID" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Payment.PaymentDate" class="col-md-2 col-form-label">Payment Date</label>
        <div class="col-md-6">
            <input asp-for="Payment.PaymentDate" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Payment.PaymentAmount" class="col-md-2 col-form-label">Payment Amount</label>
        <div class="col-md-6">
            <input asp-for="Payment.PaymentAmount" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Payment.PaymentAmount" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Payment.PaymentID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
