@model PropertyViewModel
@{
    string title = ViewBag.Action + " Property";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Save" method="post">

    <div class="row mb-3">
        <label asp-for="Property.CustomerID" class="col-form-label col-md-2">Customer</label>
        <div class="col">
            <select asp-for="Property.CustomerID" class="form-select"
                    asp-items="@(new SelectList(Model.Customers,
                         "CustomerID", "FullName"))">
                <option value="">Select a customer...</option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Property.CustomerID" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Property.PropertyAddress" class="col-form-label col-md-2">Property Address</label>
        <div class="col">
            <input asp-for="Property.PropertyAddress" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Property.PropertyCity" class="col-form-label col-md-2">Property City</label>
        <div class="col">
            <input asp-for="Property.PropertyCity" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyCity" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Property.PropertyState" class="col-form-label col-md-2">Property State</label>
        <div class="col">
            <input asp-for="Property.PropertyState" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyState" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Property.PropertyZip" class="col-form-label col-md-2">Property ZIP</label>
        <div class="col">
            <input asp-for="Property.PropertyZip" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.PropertyZip" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Property.ServiceFee" class="col-form-label col-md-2">Service Fee</label>
        <div class="col">
            <input asp-for="Property.ServiceFee" class="form-control">
        </div>
        <div class="col">
            <span asp-validation-for="Property.ServiceFee" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="Property.PropertyID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>